{
    "compilerOptions": {
        "baseUrl": ".",
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declarationMap": true,
        "declarationDir": ".",
        "declaration": true,
        "outDir": "dist",
        "removeComments": false,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "es5",
        "paths": {
            "@themost/common": [
                "src/index"
            ],
            "@themost/common/platform-server": [
                "platform-server/src/index"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "spec"
    ]
}

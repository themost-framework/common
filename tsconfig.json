{
    "compilerOptions": {
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declarationMap": true,
        "declarationDir": ".",
        "declaration": true,
        "outDir": "dist",
        "removeComments": false,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "es5"
    },
    "exclude": [
        "node_modules",
        "dist",
        "spec"
    ]
}

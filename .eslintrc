{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "describe": false,
    "it": false
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-var": "error",
    "indent": ["error", 4],
    "quotes": ["warn", "single"]
  }
}
{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": false,
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": false,
        "sourceMap": true,
        "noImplicitAny": true,
        "outDir": "./dist",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "paths": {
            "@themost/common": [
                "../src/index"
            ]
        }
    },
    "include": [
        "./spec",
        "./src",
        "../src"
    ],
    "exclude": [
        "node_modules"
    ]
}

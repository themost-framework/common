{
    "compilerOptions": {
        "baseUrl": ".",
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declarationMap": true,
        "declarationDir": ".",
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "es5",
        "paths": {
            "@themost/common": [
                "../src/index"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "spec"
    ]
}
